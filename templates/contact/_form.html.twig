{{ form_start(form) }}
    <div class="row justify-content-center mt-4">
        <div class="col-lg-9">
            <form  method="post" role="form" class="php-email-form">
                <div class="row">
                    <div class="col-md-6 form-group">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Your Name'}}) }}
                    </div>
                    <div class="col-md-6 form-group mt-3 mt-md-0">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Your Email'}}) }}
                    </div>
                </div>
                <div class="form-group mt-3">
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control', 'placeholder': 'Subject'}}) }}
                </div>
                <div class="form-group mt-3">
                    {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Message'}}) }}
                </div>
                <div class="my-3">
                    <div class="error-message"></div>
                    <div class="sent-message">We will contact you within 24 hours. Thank you!</div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn">Send Message</button>
                </div>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{{ form_end(form) }}
