{% extends 'index.html.twig' %}

{% block title %}Hello GalleryController!{% endblock %}

{% block body %}
    <!-- ======= Gallery Section ======= -->
    <section id="gallery" class="gallery">
      <div class="container-fluid">
        <div class="row gy-4">
          
        {% for product in products %}
          <div class="col-xl-3 col-lg-4 col-md-6">
            <div class="gallery-item h-100">
              <img src="/images/{{ product.image }}" class="img-fluid" alt="">
              <div class="gallery-links d-flex align-items-center justify-content-center">
                <a href="/images/{{ product.image }}" title="Gallery 1" class="glightbox preview-link"><i class="bi bi-arrows-angle-expand"></i></a>
                <a href="{{ path('app_add', {'id': product.id}) }}" class="details-link"><i class="bi bi-bag-plus"></i></a>
              </div>
            </div>
          </div>
          {% else %}
                    <h2>no records found</h2>
        {% endfor %}

        </div>
      </div>
    </section><!-- End Gallery Section -->

  </main><!-- End #main -->
{% endblock %}
